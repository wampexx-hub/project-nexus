{
  "name": "desktop",
  "version": "0.1.0",
  "description": "Nexus Desktop App",
  "author": "Nexus Team",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsc && electron .",
    "build": "tsc && electron-builder",
    "compile": "tsc"
  },
  "devDependencies": {
    "7zip-bin-linux": "^1.3.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.nexus.desktop",
    "productName": "Project Nexus",
    "electronVersion": "28.1.0",
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ]
  }
}
